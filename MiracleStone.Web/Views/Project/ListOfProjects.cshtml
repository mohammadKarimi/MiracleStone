@model IEnumerable<MiracleStone.Domain.Entity.TblProjects>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-heading-two">
    <div class="container">
        <div>
            <h3><i class="fa fa-angle-double-right color"></i> List Of Projects</h3>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<div class="container">
    <p>
        @Html.ActionLink("Create New Project", MVC.Project.ActionNames.Add, controllerName: MVC.Project.Name)
    </p>
    <table class="table table-hover table-bordered Grid">
        <tr class="GridHeader Gray">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Progress)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TblProjectsID }) |
                    @using (Html.BeginForm(MVC.Project.ActionNames.Remove, MVC.Project.Name, FormMethod.Post, new { @id = "frmRemoveProject" + item.TblProjectsID }))
                    {
                        @Html.Hidden("TblProjectsID", item.TblProjectsID)
                        <a href="#" onclick="$('#frmRemoveProject'+@item.TblProjectsID).submit()">Remove</a>
                    }
                </td>
            </tr>
        }
    </table>
</div>