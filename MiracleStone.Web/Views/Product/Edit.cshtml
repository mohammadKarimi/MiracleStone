@model MiracleStone.Domain.Entity.TblProduct

@{
    ViewBag.Title = "Edit Product"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-heading-two">
    <div class="container">
        <div>
            <h3><i class="fa fa-angle-double-right color"></i> Edit Product</h3>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(X => X.TblProductID)
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-horizontal">
            <div class="block-heading-two">
                <h3><span>Add New Product</span></h3>
            </div>
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-5" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NameFa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.NameFa, new { @class = "form-control col-md-5" })
                    @Html.ValidationMessageFor(model => model.NameFa)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TblCategoriesID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.TblCategoriesID, (SelectList)ViewBag.TblCategories, new { @class = "form-control col-md-5" })
                    @Html.ValidationMessageFor(model => model.TblCategoriesID)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProductBy, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.ProductBy, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProductBy)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Edit" class="btn btn-blue" />
                    <input type="reset" value="Reset" class="btn btn-red" />

                </div>
            </div>
        </div>
    </div>
}
