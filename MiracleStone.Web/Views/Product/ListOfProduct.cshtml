@model IEnumerable<MiracleStone.Domain.Entity.TblProduct>

@{
    ViewBag.Title = "View"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-heading-two">
    <div class="container">
        <div>
            <h3><i class="fa fa-angle-double-right color"></i> List Of Product</h3>
        </div>
        <div class="clearfix"></div>
    </div>
</div>


<div class="container">
    <p>
        @Html.ActionLink("Create New Product", MVC.Product.ActionNames.Add, controllerName: MVC.Product.Name)
    </p>
    <table class="table table-hover table-bordered Grid">
        <tr class="GridHeader Gray">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductBy)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductBy)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TblProductID }) |
                    @using (Html.BeginForm(MVC.Product.ActionNames.Remove, MVC.Product.Name, FormMethod.Post, new { @id = "frmRemoveProduct" + item.TblProductID }))
                    {
                        @Html.Hidden("TblProductID", item.TblProductID)
                        <a href="#" onclick="$('#frmRemoveProduct'+@item.TblProductID).submit()">Remove</a>
                    }
                </td>
            </tr>
        }
    </table>
</div>