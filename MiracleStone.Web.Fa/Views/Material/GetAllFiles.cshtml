@model IEnumerable<MiracleStone.Domain.Entity.TblImage>
<style>
    .owl-item {
        text-align: center;
    }
</style>
<div class="owl-nav">
    <a class="owl-nav-prev"><i class="fa fa-chevron-left"></i></a>
    <a class="owl-nav-next"><i class="fa fa-chevron-right"></i></a>
</div>
<div id="owl-carousel" class="owl-carousel owl-theme" data-items="4" data-auto-play="2500" data-pagination="false" data-single-item="false">
    @foreach (var item in Model)
    {
        string finalurl = item.Address;
        if (!finalurl.ToString().StartsWith("http://miraclestone.org"))
        {
            finalurl = "http://miraclestone.org" + finalurl.ToString();
        }
        if (item.Address.Substring(item.Address.Length - 4, 4) == ".pdf")
        {
            <a href="@finalurl">
                <i class="fa fa-file-pdf-o red" style="font-size:40px"></i>
                <p style="text-align:center">@item.Address.ToString().Split('/').Last().ToString()</p>
            </a>
        }
    }
</div>
